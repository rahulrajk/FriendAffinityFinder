<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/toplayout1"
        android:background="@drawable/side_nav_bar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_below="@+id/friendProfilePicture"
                    android:layout_marginBottom="12dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="8dp"
                    android:id="@+id/name_txt"
                    android:fontFamily="@font/amita"
                    android:text="Rahul Raj K" />


                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/friendProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    facebook:com_facebook_preset_size="normal"
                    />

            </RelativeLayout>




        </RelativeLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplayout1"
        android:layout_marginTop="-200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@color/colorWhite">


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="22dp"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorWhite">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/friendProfilePicture"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="18dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:id="@+id/g_txt"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/bree_serif"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/colorBlue"
                    android:id="@+id/gender_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/g_txt"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:id="@+id/b_txt"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/bree_serif"
                    android:layout_below="@+id/gender_txt"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11/09/1999"
                    android:textColor="@color/colorBlue"
                    android:id="@+id/birthday_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/b_txt"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:id="@+id/l_txt"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/bree_serif"
                    android:layout_below="@+id/birthday_txt"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chennai, India"
                    android:textColor="@color/colorBlue"
                    android:id="@+id/location_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/l_txt"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/e_txt"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/bree_serif"
                    android:layout_below="@+id/location_txt"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rahulrajk.citcse2017@gmail.com"
                    android:textColor="@color/colorBlue"
                    android:id="@+id/email_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/e_txt"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>























