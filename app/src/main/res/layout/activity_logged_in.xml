<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".LoggedInActivity">


    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/pr_txt"
        android:text="Profile"
        android:fontFamily="cursive"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/friendProfilePicture"
        android:layout_width="wrap_content"
        android:layout_below="@+id/pr_txt"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        facebook:com_facebook_preset_size="normal"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/friendProfilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/n_txt"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bree_serif"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rahu Raj K"
            android:textColor="@color/colorBlue"
            android:id="@+id/name_txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/n_txt"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/g_txt"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bree_serif"
            android:layout_below="@+id/name_txt"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/colorBlue"
            android:id="@+id/gender_txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/g_txt"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:id="@+id/b_txt"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bree_serif"
            android:layout_below="@+id/gender_txt"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/09/1999"
            android:textColor="@color/colorBlue"
            android:id="@+id/birthday_txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/b_txt"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/l_txt"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bree_serif"
            android:layout_below="@+id/birthday_txt"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chennai, India"
            android:textColor="@color/colorBlue"
            android:id="@+id/location_txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/l_txt"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/e_txt"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bree_serif"
            android:layout_below="@+id/location_txt"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rahulrajk.citcse2017@gmail.com"
            android:textColor="@color/colorBlue"
            android:id="@+id/email_txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/e_txt"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

    </RelativeLayout>


    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/default_twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>